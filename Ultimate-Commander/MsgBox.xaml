<Window x:Class="Ultimate_Commander.MsgBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ultimate_Commander"
        mc:Ignorable="d"
        Title="MsgBox" Height="180" Width="350" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Window.Background>
        <SolidColorBrush Color="#FFCCEDC7" Opacity="0.9"/>
    </Window.Background>
    <Grid>
        <TextBlock x:Name="tb_info" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="106" Width="324"/>
        <Button x:Name="btn_Close" Content="关闭" Margin="10,121,10,10.4" Click="Btn_Close_Click" VerticalAlignment="Center" HorizontalAlignment="Center" Width="324"/>

    </Grid>
</Window>
